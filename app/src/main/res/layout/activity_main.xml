<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tuikai.gamedemo.MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="背景音乐"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/musicRG"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bgmusicOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="开" />

            <RadioButton
                android:id="@+id/bgMusicClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:text="游戏音效"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
          />

        <RadioGroup
            android:id="@+id/soundRG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/soundOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:checked="true"
                android:text="开" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="关" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:width="94dp"
            android:text="战斗机型"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content" />

        <RadioGroup
            android:id="@+id/planeRG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/planeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="歼20" />

            <RadioButton
                android:id="@+id/planeType2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="歼灭30" />

            <RadioButton
                android:id="@+id/planeType3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="歼40" />

        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/sureBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>
